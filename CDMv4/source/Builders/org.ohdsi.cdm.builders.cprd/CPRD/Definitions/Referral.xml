      <StartDate>eventdate</StartDate>
      <ProviderId>staffid</ProviderId>
      <VisitOccurrenceId>visit_occurrence_id</VisitOccurrenceId>
      <Concepts>
        <Concept>
          <IdRequired>true</IdRequired>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>CPRD\Lookups\Clinical_Procedure.sql</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="medcode" defaultTypeId="42898141"/>
          </Fields>
        </Concept>
      </Concepts>
    </ProcedureOccurrenceDefinition>
  </ProcedureOccurrence>
  <Observation>
    <ObservationDefinition>
      <PersonId>patid</PersonId>
      <StartDate>eventdate</StartDate>
      <ProviderId>staffid</ProviderId>
      <VisitOccurrenceId>visit_occurrence_id</VisitOccurrenceId>
      <AdditionalFields>
        <string>original_source</string>
      </AdditionalFields>
      <ValuesAsString>
        <string>original_source</string>
      </ValuesAsString>
      <Concepts>
        <Concept>
          <IdRequired>true</IdRequired>
          <SourceLookup>CPRD\Lookups\Observation_Source.sql</SourceLookup>
          <ConceptIdMappers>
            <Mapper>
              <Lookup>CPRD\Lookups\Observation.sql</Lookup>
            </Mapper>
          </ConceptIdMappers>
          <Fields>
            <Field key="medcode" defaultTypeId="42898140"/>
          </Fields>
        </Concept>
      </Concepts>
    </ObservationDefinition>
    <ObservationDefinition>
